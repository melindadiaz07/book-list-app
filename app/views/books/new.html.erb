<%= form_for @book do |f| %>
    <%= f.label :title %>:<br>
    <%= f.text_field :title %><br /><br>
  
    <%= f.label :author %>:<br>
    <%= f.text_field :author %><br /><br>

    <%= f.label :genre %>:<br>
    <%= f.collection_select(:genre, Book.all, :genre, :genre) %><br>
    <br />

    <%= f.label :description %>:<br>
    <%= f.text_area :description %><br /><br>

    <%= f.label :reading_lists %>:<br>
    <%= f.collection_select(:reading_list_ids, ReadingList.all, :id, :name, {}, {multiple: true}) %>
    <br>


    

    <%= f.submit %>
  <% end %>